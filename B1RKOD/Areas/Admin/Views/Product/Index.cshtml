@model IEnumerable<B1RKOD.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <p>
        <a asp-action="Create" class="btn btn-primary">Ürün Ekle</a>
    </p>
    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    Resim
                </th>
                <th>
                   Başlık
                </th>
               
               
                <th>
                    Anasayfa
                </th>
                <th>
                    Stok
                </th>
                <th>
                   Kategori
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Image==null)
                        {
                            <img src="~/images/image/indir (1).png" width="100" height="80"/>
                        }
                        else
                        {
                            <img src="@item.Image" width="100" height="80" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    
                   
                    <td>
                        @if (item.IsHome)
                        {
                            <label class="btn btn-success btn-sm"> <i class="bi bi-check2"></i> Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"> <i class="bi bi-x"></i> Hayır</label>
                        }
                    </td>
                    <td>
                        @if (item.IsStock)
                        {
                            <label class="btn btn-success btn-sm"> <i class="bi bi-check2"></i> Evet</label>
                        }
                        else
                        {
                            <label class="btn btn-danger btn-sm"> <i class="bi bi-x"></i> Hayır</label>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-success btn-sm"><i class="bi bi-pencil"></i> Düzenle</a> |

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn-sm"> <i class="bi bi-trash"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/tr-TR.json',
                },
            });
        });
    </script>
}

